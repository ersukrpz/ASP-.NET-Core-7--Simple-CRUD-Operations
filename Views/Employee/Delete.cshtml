@model SQLServerDeneme.Models.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<h2>@ViewData["Title"]</h2>
<hr />

@if (TempData["errorMessage"] != null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @TempData["errorMessage"]
    </div>
}


    <!-- Diğer özellikler için aynı şekilde devam edebilirsiniz -->


<form asp-action="Delete" method="post" class="mt-3">
    <input type="text"  class="form-control" asp-for="Id" readonly />
    <div class="mb-3">
        <label class="form-label"> First Name</label>
        <input type="text" class="form-control" asp-for="FirstName" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label"> Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label"> DateOfBirth</label>
        <input type="text" class="form-control" asp-for="DateOfBirth" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label"> Email</label>
        <input type="text" class="form-control" asp-for="Email" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label"> Salary</label>
        <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="text" class="form-control" asp-for="Salary" readonly />
        </div>
    </div>
    <div class="mb-3">
        <div class="col-lg-12 d-grid">
            <button type="submit" class="btn btn-success">Delete</button>
        </div> 
    </div>
</form>
